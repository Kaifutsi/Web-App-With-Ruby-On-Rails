<!DOCTYPE html>
<html>
<head>
  <title>Registration</title>
</head>
<body>
  <h1>Register a New Account</h1>

  <%= form_for @user, url: users_path do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit 'Register' %>
    </div>
  <% end %>

  <%= link_to 'Back to Home', root_path %>
</body>
</html>
